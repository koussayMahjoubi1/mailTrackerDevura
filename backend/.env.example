# Backend Environment Variables
# Copy this file to .env for local development
# In production (Render), set these in the Environment tab

# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration (Required)
SUPABASE_URL=https://gvvqaewvhcvhbyleunvi.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# Email Configuration (Optional)
SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_USER=contact@devura.net
SMTP_PASS=your_smtp_password_here
SMTP_FROM=contact@devura.net

# Frontend URL (for CORS)
# Development: http://localhost:3000
# Production: Your Render frontend URL
FRONTEND_URL=http://localhost:3000

# Public Tracking URL (for pixels/links sent externally)
# Development: Leave empty (will use localhost:3001)
# Production: Set to your Render backend URL (e.g., https://your-app.onrender.com)
PUBLIC_TRACKING_URL=

# Gmail API (Optional - for Gmail integration)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3001/api/auth/gmail/callback

# Outlook API (Optional - for Outlook integration)
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret
OUTLOOK_REDIRECT_URI=http://localhost:3001/api/auth/outlook/callback
